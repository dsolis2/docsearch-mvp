# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key-here
WEAVIATE_CLASS_NAME=Documents

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # openai or anthropic
DEFAULT_MODEL=gpt-4o-mini  # GPT-4o-mini model
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_K_RESULTS=5

# Session Storage (optional - MongoDB)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ragchat
MONGODB_COLLECTION=sessions

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-for-session-signing
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Drive (for citation URLs - if needed)
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds